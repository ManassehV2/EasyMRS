
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/Content/assets/css/normalize.css" rel="stylesheet" />
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/themify-icons.css" rel="stylesheet" />
    <link href="~/Content/assets/css/flag-icon.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/cs-skin-elastic.css" rel="stylesheet" />

    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/smart_wizard_theme_arrows.css" rel="stylesheet" />
    <link href="~/Content/smart_wizard.css" rel="stylesheet" />

    <link href="~/Content/assets/scss/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/lib/vector-map/jqvmap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->

</head>
<body>
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <form method="post" action="~/Account/LogIn">
                        @Html.ValidationSummary()
                        <div class="form-group">
                            <label>User Name</label>
                            <input type="text" class="form-control" placeholder="username" name="username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" placeholder="Password" name="password">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember Me
                            </label>
                            <label class="pull-right">
                                <a href="#">Forgotten Password?</a>
                            </label>
                        </div>
                        <input type="hidden" name="ReturnUrl" value=@Request.QueryString["ReturnUrl"] />
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/plugins.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>
